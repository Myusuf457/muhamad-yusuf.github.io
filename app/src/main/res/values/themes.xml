<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coffee_Skuy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_login</item>
        <item name="colorPrimaryVariant">@color/bg_login</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
<!--    Button New-->
    <style name="ButtonNext">
        <item name="android:background">@drawable/custome_button</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:background">@drawable/custome_button</item>
        <item name="backgroundTint">@color/button</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Judul_login">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_Login">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="search" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="et_search" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="android:background">@drawable/bg_text_filed</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayout" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
    
    <style name="TextInputEditText" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="android:background">@drawable/bg_text_filed</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="view"  parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">

        <item name="background">@drawable/bg_home</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="menu" parent="ThemeOverlay.Material3.AutoCompleteTextView.FilledBox">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="background">@drawable/bg_text_filed</item>
        <item name="imageButtonStyle">@drawable/coffe_hangat</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:layout_marginLeft">45dp</item>

    </style>

    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>

</resources>